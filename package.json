{
  "name": "swordfight-cli",
  "version": "1.2.0",
  "description": "Command-line interface for the SwordFight multiplayer game",
  "keywords": [
    "cli",
    "game",
    "sword fighting",
    "multiplayer",
    "terminal"
  ],
  "author": "Michael",
  "license": "MIT",
  "type": "module",
  "main": "./dist/swordfight.js",
  "bin": {
    "swordfight": "./dist/swordfight.js",
    "swordfight-cli": "./dist/swordfight.js"
  },
  "files": [
    "dist/",
    "scripts/",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "prepublishOnly": "npm run build",
    "start": "node bin/swordfight.js",
    "test": "node scripts/test.js",
    "test:complete-game": "node scripts/test-complete-game.js",
    "test:all": "npm run test && npm run test:complete-game",
    "release": "npm version patch && git push origin main --tags",
    "release:minor": "npm version minor && git push origin main --tags",
    "release:major": "npm version major && git push origin main --tags"
  },
  "dependencies": {
    "swordfight-engine": "^1.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/swordfight-cli.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/swordfight-cli/issues"
  },
  "homepage": "https://swordfight.me"
}
